
@model MVC.Models.Products
@{
    ViewBag.Title = "Index";
}  
@using (Html.BeginForm("Index","Products", FormMethod.Get))
{
    <div class="row">
        <!--Search Area of section -->
        <div class="col-xs-12 col-sm-12">
            <div class="box">
                <div class="box-header">
                    <div class="box-name">
                        <i class="fa fa-search"></i>
                        <span>Search Area</span>
                    </div>
                    <div class="box-icons pull-right">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="expand-link">
                            <i class="fa fa-expand"></i>
                        </a>
                    </div>
                    <div class="no-move"></div>
                </div>

                <div class="box-content">
                    <form class="form-horizontal" role="form" id="frmSearch"  runat="server">
                        <div class="form-group ">                                
                            <label class="col-sm-3 col-md-2 col-lg-2 control-label">First Name : </label>
                            <div class="col-sm-3 col-md-4 col-lg-4">
                                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                            </div> 
                            <label class="col-sm-3 col-md-2 col-lg-2 control-label">Last Name : </label>
                            <div class="col-sm-3 col-md-4 col-lg-4"> 
                                <asp:TextBox ID="CND_LastName" CssClass="form-control"  runat="server" ></asp:TextBox>
                            </div>                                        
                        </div>
                        <div class="form-group">                                
                            <label class="col-sm-3 col-md-2 col-lg-2 control-label">Email : </label>
                            <div class="col-sm-3 col-md-4 col-lg-4"> 
                                <asp:TextBox ID="CND_Email" CssClass="form-control"  runat="server"></asp:TextBox>
                            </div> 
                            <label class="col-sm-3 col-md-2 col-lg-2 control-label">Tel : </label>
                            <div class="col-sm-3 col-md-4 col-lg-4"> 
                                <asp:TextBox ID="CND_Tel" CssClass="form-control"  runat="server" ></asp:TextBox>
                            </div>                                     
                        </div>
                            <div class="form-group">                                
                            <label class="col-sm-2 control-label">Online Regis : </label>
                            <div class="col-sm-4"> 
                                <asp:DropDownList ID="CND_Online" runat="server" >
                                    <asp:ListItem Selected="True" Value="2">All</asp:ListItem>
                                    <asp:ListItem Value="1"> Yes </asp:ListItem>
                                    <asp:ListItem Value="0"> No </asp:ListItem>
                                </asp:DropDownList>
                            </div> 
                            <label class="col-sm-2 control-label">Type</label>
                            <div class="col-sm-4"> 
                                <asp:DropDownList ID="CND_Type" runat="server" >
                                    <asp:ListItem Selected="True" Value="0">All</asp:ListItem>
                                    <asp:ListItem Value="1"> Sale </asp:ListItem>
                                    <asp:ListItem Value="2"> Rent </asp:ListItem>
                                    <asp:ListItem Value="3"> Both </asp:ListItem>
                                </asp:DropDownList>
                            </div>                                     
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-0 text-right col-sm-12">
                                <button type="button" class="btn btn-success btn-label-left cusBtnRightSp various fancybox.ajax" id="btnCreate">
                                    Create
                                </button>
                                <button type="button" class="btn btn-primary cusBtnRightSp" id="btnSearch">
                                    Search
                                </button>
                                <button type="button" class="btn btn-default " id="BtnClear">
                                    Clear
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>Detail Area</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding resultBox" id="dtv1">
                <table class="table table-striped table-bordered table-hover table-heading table-datatable freezeheader tblDetail display" id="tblDetail" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>Active</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Email</th>
                            <th>Tel</th>
                            <th>Type</th>
                            <th>CreateDate</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>